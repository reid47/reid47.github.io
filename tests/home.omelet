>extend base

>import-dir posts as posts

+main-content =
    @section.home-section
        @h1 posts
        >for post in posts
            @article
                @h2|a[href={post.url}] {post.title}
                @span.date|time[datetime={post.date | to_date | date_format "%yyyy-%mm-%dd"}] {post.date | to_date | date_format "%MM %d, %yyyy"}
                @ul.tags
                    >for tag in post.tags
                        @li {tag}
